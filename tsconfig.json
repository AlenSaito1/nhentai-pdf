{
  "compilerOptions": {            
    "target": "ES6",                                
    "module": "commonjs",                           
    "lib": [
      "ESNext"
    ],                                   
    "outDir": "./dist",       
    "declaration": true,            
    "strict": true,
    "strictFunctionTypes": true,                      
    "esModuleInterop": true,                    
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true     
  },
  "include": [
    "src/**/*"
  ]
}